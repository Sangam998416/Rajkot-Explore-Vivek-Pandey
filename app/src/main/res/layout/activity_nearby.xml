<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainerLow"> <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:liftOnScroll="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back" app:title="Nearby Places"
        app:titleTextColor="@color/black"
        android:background="@color/light_blue"/>

</com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTourist"
        style="@style/Widget.Material3.Button.TonalButton" android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp" android:text="Tourist Spots"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        app:icon="@drawable/ic_tourist" app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="@id/start_guide"
        app:layout_constraintEnd_toEndOf="@id/end_guide"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReligious"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" android:text="Religious Sites"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        app:icon="@drawable/ic_restaurants" app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="@id/start_guide"
        app:layout_constraintEnd_toEndOf="@id/end_guide"
        app:layout_constraintTop_toBottomOf="@id/btnTourist" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPark"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Parks &amp; Gardens"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        app:icon="@drawable/ic_park" app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="@id/start_guide"
        app:layout_constraintEnd_toEndOf="@id/end_guide"
        app:layout_constraintTop_toBottomOf="@id/btnReligious" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPicnic"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Picnic Spots"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        app:icon="@drawable/ic_picnic" app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="@id/start_guide"
        app:layout_constraintEnd_toEndOf="@id/end_guide"
        app:layout_constraintTop_toBottomOf="@id/btnPark" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRestaurant"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Restaurants &amp; Cafes"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        app:icon="@drawable/ic_restaurants" app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="@id/start_guide"
        app:layout_constraintEnd_toEndOf="@id/end_guide"
        app:layout_constraintTop_toBottomOf="@id/btnPicnic" />
</androidx.constraintlayout.widget.ConstraintLayout>