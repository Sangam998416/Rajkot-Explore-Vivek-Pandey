<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RajkotExplore"
        tools:targetApi="31">

        <!-- SplashActivity should be launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.RajkotExplore.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- _______________________________ Page Configure _____________________-->
        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.RajkotExplore.NoActionBar" />

        <!-- _________________Home Package _____________________-->
        <!-- Settings -->
        <activity
            android:name=".settings.LogoActivity"
            android:exported="true"
            android:theme="@style/Theme.RajkotExplore.NoActionBar" />
        <activity android:name=".settings.settingActivity" />
        <!-- Profile -->

        <!-- _________________ Map Package _____________________-->
        <!-- _________________ Category Package _____________________-->
        <activity android:name=".CategoryEventActivity" />
        <activity android:name=".event.EventActivity" />
        <activity android:name=".nearby.NearbyActivity" />
        <activity android:name=".nearby.TouristActivity" />
        <activity android:name=".nearby.ReligiousActivity" />
        <activity android:name=".nearby.ParkActivity" />
        <activity android:name=".nearby.PicnicActivity" />
        <activity android:name=".nearby.RestaurantActivity" />
        <activity
            android:name=".nearby.UniversityActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".CategoryDetailActivity" />
        <activity android:name=".CategoryEventActivity"
            tools:ignore="DuplicateActivity" />
        <activity android:name=".PlaceDetailActivity" />
        <activity android:name=".ViewAllActivity" />
        <activity
            android:name=".nearby.UniversityDetailActivity"
            android:exported="false"
            android:parentActivityName=".nearby.UniversityActivity" />
        <activity
            android:name=".EventDetailActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
            android:parentActivityName=".CategoryEventActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CategoryEventActivity" />
        </activity>
        <activity
            android:name=".settings.PrivacyPolicyActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- _________________ More Package _____________________-->
        <activity android:name=".more.MoreActivity" />
        <activity android:name=".more.DeveloperActivity" />
        <!-- Preloaded fonts metadata (already in your manifest) -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
